---
layout: base.njk
section: home
eleventyNavigation:
  key: Inicio
  order: 1
---
<div class="home-page">

  {# Hero #}
  <div class="hero">
    <div class="hero__col">
      {% image
        home.image,
        home.image_alt,
        "(min-width: 1024px) 50vw, 100vw",
        "hero__image shadow",
        "eager"
      %}
    </div>
    <div class="hero__col">
      <h1 class="hero__title text-secondary">{{ home.title }}</h1>
      {% if home.body %}
        <div class="hero__body">{{ home.body | markdown | safe }}</div>
      {% endif %}
      <div class="social"><a href="https://www.twitter.com/xacobenet"
          class="social__items" target="_blank" rel="noopener noreferrer"><img
            src="../assets/img/social/twitter.svg" alt="Twitter" title="Twitter"
            width="50px" height="50px"> </a><a href="https://www.drupal.org/u/xacobe"
          class="social__items" target="_blank" rel="noopener noreferrer"><img
            src="../assets/img/social/drupal.svg" alt="Drupal" title="Drupal"
            width="50px" height="50px"> </a><a href="https://github.com/xacobe"
          class="social__items" target="_blank" rel="noopener noreferrer"><img
            src="../assets/img/social/github.svg" alt="Github" title="Github"
            width="50px" height="50px"> </a><a
          href="https://codepen.io/collection/DjOYoe" class="social__items"
          target="_blank" rel="noopener noreferrer"><img
            src="../assets/img/social/codepen.svg" alt="Codepen" title="Codepen"
            width="50px" height="50px"></a></div>
    </div>
  </div>

  {# Blog #}
  {# <hr/>
  <h2>Blog</h2>
  {% from "macros/articlelist.njk" import articlelist %}
  {{ articlelist(
    articles = collections.post | reverse,
    show_tags = false,
    limit = 3
  ) }} #}

  {# Projects #}
  <hr/>
  <h2>Proyectos</h2>
  {% from "macros/projectlist.njk" import projectlist %}
  {{ projectlist(projects = collections.project | reverse) }}
  <a href="/projects" class="btn mx-auto mt-md-8">Ver todos</a>
</div>
