<header class="site-header">
  <div class="site-header__container">
    <div class="site-logo">
      <img src="/assets/img/logo.png" alt="xacobe.net logo">
    </div>
    <span class="site-header__logo-container">
      <a class="site-header__logo" href="{{ '/' | url }}" aria-label="Logo">
        xacobe.net
      </a>
    </span>
    <button
      class="site-header__mobile-nav"
      data-drawer-trigger=""
      aria-controls="drawer-name"
      aria-expanded="false"
    >
      <span class="site-header__mobile-nav-label visually-hidden">Menu</span>
      {{ global.menu_icon | svg | safe }}
    </button>
    <nav class="site-header__nav">
      {% set navPages = collections.all | eleventyNavigation %}
      <ul class="site-header__items">
      {%- for entry in navPages %}
        <li class="site-header__item">
          <a
            class="site-header__link"
            href="{{ entry.url | url }}"
            {% if entry.url == page.url %} aria-current data-current="current item"{% endif %}
          >
            {{ entry.title }}
          </a>
        </li>
      {%- endfor %}
      </ul>
    </nav>
  </div>
</header>
